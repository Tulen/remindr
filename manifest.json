{
    "manifest_version": 2,
    "name": "Remindr",
    "version": "1.0",
    "description": "Remindr is a Chrome Extension aimed to provide users with custom reminders.",
    "author": "Norris Kwan and Justin Austria",
    "icons": {
        "16": "favicon.png"
    },

    "browser_action": {
        "default_icon": "icon-remindr.png",
        "default_popup": "popup.html"
    },

    "options_page": "options.html",

    "content_scripts": [{
        "js": ["js/jquery-1.11.2.min.js", "js/script.js", "js/options.js"],
        "matches": ["http://*/*", "https://*/*"]
    }],

    "permissions": [
        "https://*/getJSON*"
    ]

}